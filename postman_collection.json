{
  "info": {
    "_postman_id": "backup-restore-auth-service",
    "name": "Backup Restore Auth Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"email\": \"user@example.com\", \"password\": \"secret123\", \"name\": \"User\" }" },
        "url": { "raw": "{{baseUrl}}/api/v1/auth/register", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"email\": \"user@example.com\", \"password\": \"secret123\" }" },
        "url": { "raw": "{{baseUrl}}/api/v1/auth/login", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","login"] }
      }
    },
    {
      "name": "Create UserData (auth)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": { "mode": "raw", "raw": "{ \"key\": \"profile\", \"data\": { \"bio\": \"hello\" } }" },
        "url": { "raw": "{{baseUrl}}/api/v1/user-data", "host": ["{{baseUrl}}"], "path": ["api","v1","user-data"] }
      }
    },
    {
      "name": "Trigger Backup (admin)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Authorization", "value": "Bearer {{adminToken}}" } ],
        "url": { "raw": "{{baseUrl}}/api/v1/backups/trigger", "host": ["{{baseUrl}}"], "path": ["api","v1","backups","trigger"] }
      }
    },
    {
      "name": "List Backups (admin)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{adminToken}}" } ],
        "url": { "raw": "{{baseUrl}}/api/v1/backups", "host": ["{{baseUrl}}"], "path": ["api","v1","backups"] }
      }
    },
    {
      "name": "Request Restore (user)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{ \"restoreType\": \"DATA\" }" },
        "url": { "raw": "{{baseUrl}}/api/v1/restore/requests", "host": ["{{baseUrl}}"], "path": ["api","v1","restore","requests"] }
      }
    }
    ,
    {
      "name": "List System Logs (admin)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{adminToken}}" } ],
        "url": { "raw": "{{baseUrl}}/api/v1/logs/system", "host": ["{{baseUrl}}"], "path": ["api","v1","logs","system"] }
      }
    },
    {
      "name": "List Restore Logs (admin)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{adminToken}}" } ],
        "url": { "raw": "{{baseUrl}}/api/v1/logs/restore", "host": ["{{baseUrl}}"], "path": ["api","v1","logs","restore"] }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000" },
    { "key": "token", "value": "" },
    { "key": "adminToken", "value": "" }
  ]
}
